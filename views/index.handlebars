<div class="container">
    <div class="row">
        <div class="col-12 border border-success d-flex">
            <i class="fas fa-hamburger "><h3>Burger Lover !!</h3></i>      
        </div>

        <div class="row border border-success">
            <div class="col s6 to-devour">
                <ul class="collection with-header">
                    <li class="collection-header">
                        <h5>Burgers to Eat</h5>
                    </li>
                    {{#each burgers}}
                    {{#unless devoured}}
                    {{> burgers/burger-block devoured=false}}
                    {{/unless}}
                    {{/each}}
                </ul>
            </div>

            <div class="col s6 devoured">
                <ul class="collection with-header">
                    <li class="collection-header">
                        <h5>Burgers Eaten</h5>
                    </li>
                    {{#each burgers}}
                    {{#if devoured}}
                    {{> burgers/burger-block devoured=true}}
                    {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>

        <div class="row">
            <form class="col s8 form offset-s2">
                <div class="row formdiv">
                    <div class="input-field col s12">
                        <textarea id="textarea"></textarea>
                        <label for="textarea">Enter a burger you want to eat</label>
                    </div>
                </div>
            </form>
        </div>
        <div class="row">
            <button class="btn submit" type="submit" name="action">Submit
            </button>
        </div>

    </div>
</div>